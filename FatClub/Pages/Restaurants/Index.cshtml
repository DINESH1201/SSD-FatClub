@page
@model FatClub.Pages.Restaurants.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<body>
<p>
    <a asp-page="Create">Create New</a>
</p>
<section>
    <h1>Fat Club</h1>
    <div class="title-container">
        <div></div>
        <h2>Redefining food, one mouth at a time.</h2>
    </div>
</section>
<input class="search-bar" type="text" placeholder="What've you been craving..." asp-for="searchString">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Restaurant[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Restaurant[0].Genre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Restaurant)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                @foreach (var food in item.Foods)
                {
                    <td>
                        @Html.DisplayFor(modelItem => food.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => food.Price)
                    </td>
                }
                @foreach (var rating in item.Ratings)
                {
                    <td>
                        @Html.DisplayFor(modelItem => rating.Description)
                    </td>
                }
                <!--
                        <td>
                            @*
                            <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                            <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                            <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                            *@
                        </td>
                -->
            </tr>
        }
    </tbody>
</table>
</body>