@page
@model FatClub.Pages.Cart.ViewCartModel

@{
    ViewData["Title"] = "ViewCart";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>ViewCart</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CartItem[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CartItem[0].FoodID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CartItem)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FoodID)
                </td>
                <td>
                    <a asp-page-handler="DeleteFromCart" asp-route-id="@item.CartItemID">Delete</a>
                </td>
            </tr>
        }
        <tr>
            <th>
                Total
            </th>
            <th>
                @Model.Total
            </th>
            <th></th>
        </tr>
    </tbody>
</table>
